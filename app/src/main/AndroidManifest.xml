<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.knowledgeloot">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".LootCollection"
            android:label="The Loot Collection"
            android:parentActivityName=".MainActivity">
        </activity>

        <activity
            android:name=".LootConfirmation"
            android:label="Do you already have this?"
            android:parentActivityName=".MainActivity">
        </activity>

        <activity
            android:name=".EnterLoot"
            android:label="Gimme the brain stuff!"
            android:parentActivityName=".MainActivity">
        </activity>

    </application>

</manifest>